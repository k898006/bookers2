<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" >
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path  %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
          <% if user_signed_in? %>
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to user_path(current_user.id) do %>
                <i class="fas fa-home text-light"></i>
                <span>Home</span>
                <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <i class="fas fa-users text-light"></i>
              <span>Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <i class="fas fa-book-open text-light"></i>
              <span>Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt text-light"></i>
              <span>Log out</span>
              <% end %>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav  ml-auto">
            <li>
              <%= link_to root_path do %>
              <i class="fas fa-home text-light"></i>
              <span>Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path do %>
              <i class="fas fa-link text-light"></i>
              <span>About</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <i class="fas fa-user-plus text-light"></i>
              <span>Sign up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt text-light"></i>
              <span>Log in</span>
              <% end %>
            </li>
          </ul>
          <% end %>
      </div>
    </header>
    <main class="pt-16">
    <%= render 'layouts/notification' %>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
