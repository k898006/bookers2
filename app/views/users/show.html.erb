
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'show', user: @user %>
        <% if @book.errors.any? %>
        <% @book.errors.count %> errors have ocuured!
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-9"></div>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(63, 63) %></td>
          <td><%= link_to book_path do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>