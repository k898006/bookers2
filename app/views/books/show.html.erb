<div class="container m-15">
  <div class="row">
    <div class="col-md-3">
      <%= flash[:notice] %>
      <div>
        <%= render 'users/show', user: @user %>
        <%= render 'new', book: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @book_detail.user.get_profile_image(63, 63) %><br>
              <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail.id) do %>
              <%= @book_detail.title %>
              <% end %>
            </td>
            <td><%= @book_detail.body %></td>
            <% if @book_detail.user == current_user %>
            <td><%= link_to "Destroy", book_path(@book_detail), method: :delete, "data-confirm" => "Are you sure to delete the reord?" %></td>
            <% end %>
            <% if @book_detail.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book_detail.id) %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
