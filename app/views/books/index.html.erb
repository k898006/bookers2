<% if @book.errors.any? %>
    Error!!
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <%= render 'users/show', user: @user %>
        <%= render 'new', book: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(63, 63) %><% end %><br>
              <%= book.user.name %>
            </td>
            <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
